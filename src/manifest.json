{
  "$schema": "http://json.schemastore.org/webextension",
  "manifest_version": 2,
  "name": "Telegram Send",
  "version": "1.0.1",
  "description": "Quickly share media and links on the web to telegram groups.",
  "author": "phaux",
  "homepage_url": "https://github.com/phaux/telegram-send",
  "icons": {
    "24": "./images/telegram.png?width=24",
    "48": "./images/telegram.png?width=48",
    "96": "./images/telegram.png?width=96"
  },
  "permissions": ["https://api.telegram.org/*", "contextMenus", "storage", "notifications"],
  "browser_action": {
    "default_icon": "./images/paper-plane.svg",
    "theme_icons": [
      {
        "light": "./images/paper-plane-white.svg",
        "dark": "./images/paper-plane-black.svg",
        "size": 32
      }
    ]
  },
  "background": {
    "page": "./background/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content_scripts/index.ts"]
    }
  ],
  "options_ui": {
    "page": "options_ui/index.html",
    "browser_style": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "telegram-send@phaux.github.io"
    }
  }
}
