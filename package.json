{
  "name": "telegram-send",
  "version": "1.0.1",
  "description": "Telegram share web extension",
  "author": "Nikita Stefaniak <phaux4@gmail.com>",
  "license": "ISC",
  "private": true,
  "scripts": {
    "start": "run-p start:*",
    "start:snowpack": "snowpack build --watch",
    "start:web-ext": "sleep 5s && web-ext run -s build",
    "build": "run-s build:*",
    "build:snowpack": "snowpack build",
    "build:web-ext": "web-ext build -s build --overwrite-dest",
    "format": "run-s format:*",
    "format:eslint": "eslint --ignore-path .gitignore --ext js,jsx,ts,tsx --fix .",
    "format:prettier": "prettier --ignore-path .gitignore --write .",
    "test": "run-s test:*",
    "test:eslint": "eslint --ignore-path .gitignore --ext js,jsx,ts,tsx .",
    "test:prettier": "prettier --ignore-path .gitignore --check .",
    "test:tsc": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged -q",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{html,css,js,jsx,ts,tsx,json}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "semi": false,
    "printWidth": 100
  },
  "devDependencies": {
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "snowpack": "^3.3.7",
    "typescript": "^4.2.4",
    "web-ext": "^6.1.0",
    "web-ext-types": "^3.2.1"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.2.3"
  }
}
